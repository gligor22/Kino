@model Cineplex.Domain.DTO.TicketShoppingCartDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Add To Cart</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCartP" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="ticketID" type="hidden" class="form-control" />
                <span asp-validation-for="ticketID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ticket.Movie.Title" class="control-label"></label>
                <input asp-for="ticket.Movie.Title" class="form-control" />
                <span asp-validation-for="ticket.Movie.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="quantity" class="control-label"></label>
                <input asp-for="quantity" class="form-control" />
                <span asp-validation-for="quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>